<Window x:Class="极简浏览器.WebSource" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:极简浏览器"
        mc:Ignorable="d" Title="网页源代码" Height="600" Width="600" Loaded="window_Loaded" WindowState="Maximized">
    <Grid>
        <ScrollViewer Margin="0,30,0,0">
            <TextBox x:Name="textBox" Margin="0,0,0,0" AcceptsReturn="True" />
        </ScrollViewer>
        <Button x:Name="button" Content="刷新(_F)" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top"
                Width="75" Click="button_Click" />
    </Grid>
</Window>
